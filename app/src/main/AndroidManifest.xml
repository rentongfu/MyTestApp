<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tongfu.mytestapp">

    <uses-permission android:name="android.permission.BROADCAST_STICKY" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name=".widget.CalendarService"
            android:enabled="true"
            android:permission="android.permission.BIND_REMOTEVIEWS"
            android:exported="true"></service>

        <receiver android:name=".widget.MyTestWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/my_test_widget_info" />
        </receiver>

        <activity android:name=".eventbus.EventBusActivity" />
        <activity android:name=".managerservice.ManagerServiceActivity" />
        <activity
            android:name=".multiprocess.MultiProcessActivity"
            android:process=":child" />
        <activity android:name=".swiperefresh.SwipeRefreshActivity" />
        <activity android:name=".recyclerview.RecyclerViewActivity" />
        <activity android:name=".crashrecord.CrashRecordActivity" />
        <activity android:name=".animation.shareelement.ShareElementActivity2" />
        <activity android:name=".animation.shareelement.ShareElementActivity1" />
        <activity android:name=".animation.AnimationEntryActivity" />
        <activity android:name=".imageload.PicassoActivity" />
        <activity android:name=".imageload.ImageLoadEntryActivity" />
        <activity
            android:name=".smoothexit.SmoothExitActivity"
            android:theme="@style/tran" />
        <activity
            android:name=".video.VideoPlayEntryActivity"
            android:configChanges="orientation" />
        <activity android:name=".video.VideoPlayActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.HOME" />
                <!-- <category android:name="android.intent.category.DEFAULT" /> -->
            </intent-filter>
        </activity>
        <activity android:name=".customview.ontouchevent1.OnTouchEventTestActivity" />
        <activity android:name=".contentprovider.ContentProviderActivity" />

        <provider
            android:name=".contentprovider.MyProvider"
            android:authorities="com.tongfu.mytestapp" />

        <service
            android:name=".service.MusicPlayService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".service.MusicPlayActivity" />
        <activity android:name=".broadcastreceiver.BroadcastReceiverActivity" />

        <receiver
            android:name=".broadcastreceiver.MyStaticReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".network.NetworkActivity" />
        <activity android:name=".database.DatabaseMenuActivity" />
        <activity android:name=".nonification.NotificationActivity" />
        <activity android:name=".layout.LayoutActivity" />
        <activity android:name=".menu.MenuActiivty" />
    </application>

</manifest>